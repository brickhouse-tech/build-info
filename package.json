{
  "name": "@znemz/build-info",
  "version": "0.2.0",
  "description": "Get build info (git, os, package) for your app",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "example": "node examples/basic.js",
    "lint": "eslint src",
    "prepublishOnly": "npm test"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brickhouse-tech/build-info"
  },
  "keywords": [
    "build",
    "info",
    "git",
    "os",
    "version"
  ],
  "author": "Nick McCready",
  "license": "MIT",
  "dependencies": {
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "vitest": "^3.0.0"
  }
}
